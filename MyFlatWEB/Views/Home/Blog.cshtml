@model List<PostModel>

@{
    ViewData["Title"] = "Blog";
}

<section class="latest-product-area pt-130 pb-110">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-xl-6 col-lg-7 col-md-10">
                <div class="text-center section-title mb-60 mt-4">
                    <h1>@ViewData["Title"]</h1>
                    <p>As a builder, we undertake large, complex projects, foster innovation, embrace emerging technologies, and make a difference in the community.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <div class="col-xl-3 col-lg-6 col-md-6 col-sm-10 col-9">
                    <div class="single-product">
                        <a class="text-decoration-none"
                           asp-controller="Home"
                           asp-action="BlogDetails"
                           asp-route-id="@item.Id">
                            <div class="date-blog">
                                <h6 class="text-black-50 ml-3">@item.PostingDate.ToString("dd MMMM yyyy")</h6>
                            </div>
                            <div class="product-img">
                                <img src="data:image;base64,@(Convert.ToBase64String(item.PostImage))" alt="">
                            </div>
                            <div class="product-header">
                                <h5 class="name p-2">@item.PostHeader</h5>
                                <p class="text-dark pl-2 pr-2">@item.PostDescription</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        }


        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-10 col-9">
            <div class="single-product">
                <a class="text-decoration-none"
                   asp-controller="Home"
                   asp-action="BlogDetails">
                    <div class="date-blog">
                        <h6 class="text-black-50 ml-3">Date of create</h6>
                    </div>
                    <div class="product-img">
                        <img src="~/Images/b2.jpg" alt="">
                    </div>
                    <div class="product-header">
                        <h5 class="name p-2">On construction</h5>
                        <p class="text-dark pl-2 pr-2">As a builder, we undertake large, complex projects, foster innovation, embrace emerging technologies, and make a difference in the community.</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-10 col-9">
            <div class="single-product">
                <a class="text-decoration-none"
                   asp-controller="Home"
                   asp-action="BlogDetails">
                    <div class="date-blog">
                        <h6 class="text-black-50 ml-3">Date of create</h6>
                    </div>
                    <div class="product-img">
                        <img src="~/Images/b3.jpeg" alt="">
                    </div>
                    <div class="product-header">
                        <h5 class="name p-2">Design Applications</h5>
                        <p class="text-dark pl-2 pr-2">As a builder, we undertake large, complex projects, foster innovation, embrace emerging technologies, and make a difference in the community.</p>
                    </div>
                </a>
            </div>
        </div>

        <div class="col-xl-3 col-lg-6 col-md-6 col-sm-10 col-9">
            <div class="single-product">
                <a class="text-decoration-none"
                   asp-controller="Home"
                   asp-action="BlogDetails">
                    <div class="date-blog">
                        <h6 class="text-black-50 ml-3">Date of create</h6>
                    </div>
                    <div class="product-img">
                        <img src="~/Images/b4.jpg" alt="">
                    </div>
                    <div class="product-header">
                        <h5 class="name p-2">Load calculation</h5>
                        <p class="text-dark pl-2 pr-2">As a builder, we undertake large, complex projects, foster innovation, embrace emerging technologies, and make a difference in the community.</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>
