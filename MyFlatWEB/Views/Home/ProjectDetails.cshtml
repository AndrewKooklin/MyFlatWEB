@model ProjectModel

@{
    ViewData["Title"] = "Project Details";
}

<section id="projects-header" 
         class="latest-product-area pt-130 pb-110">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-xl-6 col-lg-7 col-md-10">
                <div class="text-center section-title mb-60 mt-4">
                    <h1>Project Details</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="banner-area bg_cover">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <div class="banner-content">
                    <div class="review-header mt-4 w-100">
                        <div class="d-inline-flex">
                            <h3 class="pt-4">@Model.ProjectHeader</h3>
                        </div>
                        <div class="d-inline-flex float-right">
                            <div class="product-img">
                                <img src="data:image;base64,@(Convert.ToBase64String(Model.ProjectImage))" 
                                     style="width:auto; 
                                     height:100px;" 
                                     alt="project-image">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<hr />
<section class="product-details-area">
    <div class="container">
        <div class="product-details-wrapper box-style">
            <div class="info-wrapper">
                <div class="text-wrapper">
                    <p class="description mb-30">
                        @Model.ProjectDescription
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <a class="btn btn-primary me-2 ion-ios-arrow-back"
           asp-controller="Home"
           asp-action="Projects"
           role="button">&nbsp;Back</a>
    </div>
</section>
