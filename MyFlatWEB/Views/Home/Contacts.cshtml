@model ContactModel

@{
    ViewData["Title"] = "Contacts";
    var social = ViewBag.Social;
}

<section id="services-header" class="latest-product-area pt-130 pb-110">
    <div class="container">
        <div class="row">
            <div class="mx-auto col-xl-6 col-lg-7 col-md-10">
                <div class="text-center section-title mb-60 mt-4">
                    <h1>Our Contacts</h1>
                </div>
            </div>
        </div>
    </div>
    <hr />
</section>

<section id="Contacts">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-7 col-lg-6 text-md-start py-6">
                <div class="d-flex border-bottom pb-3 mb-3">
                    <div class="flex-shrink-0">
                        <img src="~/Images/icons/geo.png">
                    </div>
                    <div class="ms-3">
                        <h6>Our Office</h6>
                        <span>@Model.ContactAddress</span>
                    </div>
                </div>
                <div class="d-flex border-bottom pb-3 mb-3">
                    <div class="flex-shrink-0">
                        <img src="~/Images/icons/phone-contact.png">
                    </div>
                    <div class="ms-3">
                        <h6>Call Us</h6>
                        <a class="text-decoration-none" href="tel:@Model.ContactPhone"><span>@Model.ContactPhone</span></a>
                    </div>
                </div>
                <div class="d-flex border-bottom pb-3 mb-3">
                    <div class="flex-shrink-0">
                        <img src="~/Images/icons/unitymail.png">
                    </div>
                    <div class="ms-3">
                        <h6>Mail Us</h6>
                        <a class="text-decoration-none" href="mailto:@Model.ContactEmail"><span>@Model.ContactEmail</span></a>
                    </div>
                </div>
                <div class="d-flex align-items-start border-bottom-0 pb-3 mb-3">
                    @if (social != null)
                    {
                        foreach (var item in social)
                        {
                            <a class="social-link"
                               href="@item.SocialLink">
                                <img src="data:image;base64,@(Convert.ToBase64String(item.SocialImage))"
                                     class="img-social">
                            </a>
                        }
                    }
                    @*<a class="social-link"
                       href="https://web.telegram.org/">
                        <img src="~/Images/icons/icon-telegram-48.png"
                             class="img-social">
                    </a>
                    <a class="social-link"
                       href="https://m.youtube.com/">
                        <img src="~/Images/icons/icon-youtube-48.png"
                             class="img-social">
                    </a>
                    <a class="social-link"
                       href="https://www.instagram.com/">
                        <img src="~/Images/icons/icon-instagram-48.png"
                             class="img-social">
                    </a>*@
                </div>
            </div>
            <div class="col-md-5 col-lg-6 text-end">
                <iframe class="w-100 rounded" 
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d71314.82901753698!2d92.8036237002033!3d56.043115098057925!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x5cd7aefbb43fa28f%3A0xcdb08fd6ad821206!2sTsentral&#39;nyy%20District%2C%20Krasnoyarsk%2C%20Krasnoyarsk%20Krai%2C%20Russia!5e0!3m2!1sen!2sbd!4v1712835143022!5m2!1sen!2sbd" 
                        width="600" 
                        height="450" 
                        style="border:0;" 
                        allowfullscreen="true" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>


