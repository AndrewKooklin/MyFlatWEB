@inject UserRolesModel UserRolesModel

<ul class="navbar-nav">
        @if (UserRolesModel != null && !String.IsNullOrEmpty(UserRolesModel.EMail))
        {
            <li class="nav-item ">
                <a id="manage" 
                   class="nav-link" 
                   style="color:darkred"><i>Hello @UserRolesModel.EMail!</i></a>
            </li>
            <li class="nav-item">
                <form class="form-inline" 
                      asp-area="" 
                      asp-controller="Account" 
                      asp-action="LogoutUser">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark"
                   asp-area=""
                   asp-controller="Account" 
                   asp-action="RegisterUser">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" 
                   asp-area=""
                   asp-controller="Account"
                   asp-action="LoginUser">Login</a>
            </li>
        }
    </ul>
