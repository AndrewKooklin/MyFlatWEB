@inject UserRolesModel UserRolesModel

<ul class="navbar-nav">
        @if (UserRolesModel != null && !String.IsNullOrEmpty(UserRolesModel.EMail))
        {
            string[] nameArray = UserRolesModel.EMail.Split("@");
            string name = nameArray[0];

            <li class="nav-item hello-user">
                <p id="manage" 
                   class="name-user nav-link text-dark">Hello <i style="color:darkred">@name</i> !</p>
            </li>
            <li class="nav-item">
                <form class="form-inline" 
                      asp-area="" 
                      asp-controller="Account" 
                      asp-action="LogoutUser">
                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark"
                   asp-area=""
                   asp-controller="Account" 
                   asp-action="RegisterUser">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" 
                   asp-area=""
                   asp-controller="Account"
                   asp-action="LoginUser">Login</a>
            </li>
        }
    </ul>
