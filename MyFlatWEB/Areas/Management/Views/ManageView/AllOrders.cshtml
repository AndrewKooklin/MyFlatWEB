@model List<OrderModel>
@inject StatusesModel StatusesModel
@inject ChangeStatusModel ChangeStatusModel



<div class="container m-0">
    <div class="row">
        <h2 class="mt-3">All Orders</h2>
    </div>
    <div class="row resp-table mt-3">
        <div class="resp-table-header">
            <div class="table-header-cell">Id</div>
            <div class="table-header-cell">Date Create</div>
            <div class="table-header-cell">Name</div>
            <div class="table-header-cell">Email</div>
            <div class="table-header-cell">Mobile</div>
            <div class="table-header-cell">Service</div>
            <div class="table-header-cell">Message</div>
            <div class="table-header-cell">Status</div>
            <div class="table-header-cell">Statuses</div>
            <div class="table-header-cell"><i>Change status</i></div>
        </div>
        <div class="resp-table-body">
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <form class="" asp-controller="Statuses" asp-action="ChangeStatus" method="post">
                        <div class="resp-table-row">
                            <div class="table-body-cell">
                                @item.Id
                            </div>
                            <div class="table-body-cell">
                                @item.DateCreate
                            </div>
                            <div class="table-body-cell">
                                Cell 1–3
                            </div>
                            <div class="table-body-cell">
                                Cell 1–4
                            </div>
                            <div class="table-body-cell">
                                Cell 1–5
                            </div>
                            <div class="table-body-cell">
                                Cell 1–6
                            </div>
                            <div class="table-body-cell">
                                Cell 1–7
                            </div>
                            <div class="table-body-cell">
                                Cell 1–8
                            </div>
                            <div class="table-body-cell">
                                Cell 1–9
                            </div>
                            <div class="table-body-cell">
                                Cell 1–10
                            </div>
                        </div>
                    </form>
                }
            }
        </div>
    </div>
</div>

<form class="" asp-controller="Statuses" asp-action="ChangeStatus" method="post">
    <table class="text-table table mt-5">
        <thead>
            <tr>
                <th class="">Id</th>
                <th class="">DateCreate</th>
                <th class="">Name</th>
                <th class="">Email</th>
                <th class="">Mobile</th>
                <th class="">Service</th>
                <th class="">Message</th>
                <th class="">Status</th>
                <th class="" width="125px">Statuses</th>
                <th class=""><i>Change status</i></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="">@item.Id</td>
                        <td class="">@item.DateCreate</td>
                        <td class="">@item.Name</td>
                        <td class="">@item.Email</td>
                        <td class="">@item.Mobile</td>
                        <td class="">@item.ServiceName</td>
                        <td class="text-left">@item.Message</td>
                        <td class="">@item.StatusName</td>
                        <td class="select-status">
                            <select asp-for="@item.StatusName"
                                    asp-items="@StatusesModel.StatusNames"
                                    class="select-status-control">
                            </select>
                        </td>
                        <td class="collapse invisible">
                            <input class="collapse invisible"
                                   asp-for="@ChangeStatusModel.Status"
                                   value="@item.StatusName" />
                        </td>
                        <td class="collapse invisible">
                            <input class="collapse invisible"
                                   asp-for="@ChangeStatusModel.Id"
                                   value="@item.Id" />
                        </td>
                        <td class="">
                            <button class="btn btn-primary"
                                    title="Изменить"
                                    type="submit">
                                Change
                            </button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</form>




