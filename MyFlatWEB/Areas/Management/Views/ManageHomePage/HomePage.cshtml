@model HomePagePlaceholderModel

@{
    Layout = "~/Areas/Management/Views/Shared/_ManageLayout.cshtml";
    string linkNameValue = "";
    string randomPhrase = "";
    string changePhrase = "";
    string leftCentralAreaText = "";
    IFormFile formFile = null;
    byte[] image = null;
    string bottomAreaHeader = "";
    string bottomAreaContent = "";
}

<html>
<head>
    <script src="~/lib/jquery/admin/jquery-1.12.4.min.js"></script>
</head>
<body>
</body>
</html>

<div class="container">
    <section id="topArea">
        <div id="topMenu" class="row text-left">
            <div class="col">
                <div class="text-left mt-3">
                    <h3>Top menu links</h3>
                </div>
                <div class="row d-inline-flex justify-content-start ml-1">
                    @if (Model.LinkNames.Any())
                    {
                        @foreach (var item in Model.LinkNames)
                        {
                            <div class="mr-1 p-0">
                                <form id="formOrder"
                                      method="post">
                                    <div class="row text-danger" asp-validation-summary="All"></div>
                                    <div class="row ml-1 mr-1">
                                        <input id="datefrom"
                                               @*asp-for=""*@
                                               placeholder="@item.LinkName"
                                               type="text"
                                               value="@linkNameValue"
                                               class="input-data-field input-sm" />
                                    </div>
                                    <div class="row justify-content-end mr-1">
                                        <button class="btn-manage btn-manage-edit"
                                                type="submit"
                                                asp-controller="ManageHomePage"
                                                asp-action="ChangeNameLinkTopMenu"
                                                asp-route-id="@item.Id"
                                                asp-route-linkName="@linkNameValue"
                                                title="Edit">
                                            🖉
                                        </button>
                                    </div>
                                </form>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
        <hr class="section-border" />
        <div id="randomString" class="row text-left">
            <div class="col">
                <div class="text-left mt-3">
                    <h3>Random phrase</h3>
                </div>
                <div class="mt-2">
                    <h4>Add random phrase</h4>
                </div>
                <div class="row text-left">
                    <div class="col">
                        <form id="formOrder"
                              asp-route-id="0"
                              asp-route-phrase="@randomPhrase"
                              method="post">
                            <div class="row ml-2">
                                <div class="col">
                                    <div class="row text-danger" asp-validation-summary="All"></div>
                                    <div class="row align-content-start justify-content-start">
                                        <div class="p-0">
                                            <input id="datefrom"
                                                   @*asp-for=""*@
                                                   type="text"
                                                   class="input-random-phrase"
                                                   value="@randomPhrase" />
                                        </div>
                                        <div class="ml-1">
                                            <button class="btn-manage btn-manage-add-phrase"
                                                    type="submit"
                                                    asp-controller="ManageHomePage"
                                                    asp-action="AddRandomPhrase"
                                                    title="Add phrase">
                                                +
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row d-inline-flex justify-content-start ml-1">
                    @if (Model.RandomPhrases.Any())
                    {
                        @foreach (var item in Model.RandomPhrases)
                        {
                            <div class="mr-1 p-0">
                                <form id="formOrder"
                                      method="post">
                                    <div class="row text-danger" asp-validation-summary="All"></div>
                                    <div class="row ml-1 mr-1">
                                        <input id="datefrom"
                                               @*asp-for=""*@
                                               placeholder="@item.Phrase"
                                               type="text"
                                               class="input-random-phrase"
                                               value="@changePhrase" />
                                    </div>
                                    <div class="row mt-1 mr-1 justify-content-end">
                                        <div class="d-inline">
                                            <button class="btn-manage btn-manage-edit"
                                                    type="submit"
                                                    asp-controller="ManageHomePage"
                                                    asp-action="ChangeRandomPhrase"
                                                    asp-route-id="@item.Id"
                                                    asp-route-changePhrase="@changePhrase"
                                                    title="Edit phrase">
                                                🖉
                                            </button>
                                        </div>
                                        <div class="d-inline">
                                            <button class="btn-manage btn-manage-delete"
                                                    asp-controller="ManageHomePage"
                                                    asp-action="DeleteRandomPhrase"
                                                    asp-route-id="@item.Id"
                                                    type="submit"
                                                    title="Delete phrase">
                                                🗑
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </section>

    <hr class="section-border" />

    <section id="centralArea">
        <div id="centralAreaContent" class="row text-left">
            <div id="leftPhrase" class="col-md-7 col-lg-6 text-md-start text-left py-6">
                <div class="mt-3">
                    <h3>Central area left side text</h3>
                </div>
                <div class="col">
                    <form id="formOrder"
                          method="post">
                        <div class="row text-danger" asp-validation-summary="All"></div>
                        <div class="row central-area-text">
                            <input id="leftPhrase"
                                   @*asp-for=""*@
                                   placeholder="@Model.LeftCentralAreaText"
                                   type="text"
                                   class="input-data-field input-sm input-central-area-text"
                                   value="@leftCentralAreaText" />
                        </div>
                        <div class="row input-central-area-text mt-1 mr-1 justify-content-end">
                            <button class="btn-manage btn-manage-edit"
                                    type="submit"
                                    asp-controller="ManageHomePage"
                                    asp-action="ChangeLeftCentralAreaText"
                                    asp-route-id="@Model.Id"
                                    asp-route-leftCentralAreaPhrase="@leftCentralAreaText"
                                    title="Edit">
                                🖉
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div id="rigthImage" class="col-md-5 col-lg-6 order-0 order-md-1 text-end">
                <div class="row mt-3 ml-1">
                    <h3>Main image</h3>
                </div>
                <div class="row ml-1">
                    <img class="pt-7 pt-md-0" src="~/Images/hand-draft.webp" width="280" height="150">
                </div>
                <div class="row ml-4">
                    <form id="formOrder"
                          method="post"
                          enctype="multipart/form-data">
                        <div class="row text-danger" asp-validation-summary="All"></div>
                        <div class="row">
                            <label id="choose-file-label"
                                   for="mainImage"
                                   class="btn-choose-file"
                                   title="Choose image">
                                Choose image
                            </label>
                            <input id="mainImage"
                                   type="file"
                                   accept=".jpg, .jpeg, .png, .webp"
                                   placeholder="Choose image"
                                   class="select-image"
                                   asp-for="@Model.MainPicture"
                                   name="image"
                                   value="@formFile"
                                   alt="Choose image">
                            <label id="choose-file-text"
                                   class="label-not-choose-image">
                                Image not choosed
                            </label>
                        </div>
                        <div class="row mt-1">
                            <button class="btn-change-image"
                                    type="submit"
                                    asp-controller="ManageHomePage"
                                    asp-action="ChangeMainImage"
                                    asp-route-id="@Model.Id"
                                    asp-route-image="@formFile"
                                    title="Change image">
                                Change
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <hr class="section-border" />

    <section id="bottomArea">
        <div class="text-left mb-4">
            <div class="text-left mt-3">
                <h3>Bottom header left text</h3>
            </div>
            <div class="text-left mt-2">
                <form id="bottomAreaHeader"
                      method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="mt-1">
                        <textarea id="bottomHeader"
                                  cols="40"
                                  rows="2"
                                  @*asp-for=""*@
                                  placeholder="@Model.BottomAreaHeader"
                                  value="@bottomAreaHeader"></textarea>
                    </div>
                    <div class="mt-1">
                        <button class="btn-change-text"
                                type="submit"
                                asp-controller="ManageHomePage"
                                asp-action="ChangeBottomAreaHeader"
                                asp-route-bottomHeader="@bottomAreaHeader"
                                title="Change header">
                            Change
                        </button>
                    </div>
                </form>
            </div>
            <div class="text-left mt-3">
                <h3>Bottom content text</h3>
            </div>
            <div class="text-left mt-2">
                <form id="bottomAreaContent"
                      method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="mt-1">
                        <textarea id="bottomContent"
                                  cols="50"
                                  rows="9"
                                  @*asp-for=""*@
                                  placeholder="@Model.BottomAreaContent"
                                  value="@bottomAreaContent"></textarea>
                    </div>
                    <div class="mt-1">
                        <button class="btn-change-text"
                                type="submit"
                                asp-controller="ManageHomePage"
                                asp-action="ChangeBottomAreaContent"
                                asp-route-bottomContent="@bottomAreaContent"
                                title="Change text">
                            Change
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#mainImage').change(function () {
            var i = $(this).prev('label').clone();
            var file = $('#mainImage')[0].files[0].name;
            $(this).prev('label').text(file);
            $(this).next('label').removeClass('label-not-choose-image');
            $(this).next('label').addClass('label-choose-image');
            $(this).next('label').text("Image choosed");
        });
    });

</script>