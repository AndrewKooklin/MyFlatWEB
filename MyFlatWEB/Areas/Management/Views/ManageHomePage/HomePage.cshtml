@model HomePagePlaceholderModel
@{ 
    string linkNameValue = "";
    string randomPhrase = "";
    string changePhrase = "";
}

<section id="topArea">
    <div id="topMenu" class="row text-left">
        <div class="col-md-5 col-lg-10">
            <div class="text-left">
                <h3>Top menu links</h3>
            </div>
            <div class="row resp-table mt-3 text-left">
                <div class="table-row-header">
                    <div class="resp-table-row">
                        @if (Model.LinkNames.Any())
                        {
                            @foreach (var item in Model.LinkNames)
                            {
                                <div class="table-cell-data">
                                    <form id="formOrder"
                                          asp-controller="ManageHomePage"
                                          asp-action="ChangeNameLinkTopMenu"
                                          asp-route-id="@item.Id"
                                          asp-route-linkName="@linkNameValue"
                                          method="post">
                                        <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                                        <div class="d-inline input-daterange input-group-data">
                                            <input id="datefrom"
                                                   @*asp-for=""*@
                                                   placeholder="@item.LinkName"
                                                   type="text"
                                                   value="@linkNameValue"
                                                   class="input-data-field input-sm d-inline-flex" />
                                        </div>
                                        <div>
                                            <button class="table-cell-button"
                                                    type="submit">
                                                Edit
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="randomString">
        <div class="col-md-5 col-lg-10">
            <div class="text-left">
                <h3>Random phrase</h3>
            </div>
            <div class="row mt-3 text-left">
                <div class="col">
                    <form id="formOrder"
                          asp-route-id="0"
                          asp-route-phrase="@randomPhrase"
                          method="post">
                        <div class="mt-2">
                            <h4>Add random phrase</h4>
                        </div>
                        <div class="row mt-2">
                            <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                            <div class="input-daterange input-group-data">
                                <input id="datefrom"
                                       @*asp-for=""*@
                                       type="text"
                                       class="input-data-field input-sm d-inline-flex"
                                       value="@randomPhrase"/>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="d-inline">
                                <button class="table-cell-button"
                                        type="submit"
                                        asp-controller="ManageHomePage"
                                        asp-action="AddRandomPhrase">
                                    Add
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="table-row-header">
                    <div class="resp-table-row">
                        @if (Model.RandomPhrases.Any())
                        {
                            @foreach (var item in Model.RandomPhrases)
                            {
                                <div class="table-cell-data">
                                    <form id="formOrder"
                                          method="post">
                                        <div class="row">
                                            <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                                            <div class="input-daterange input-group-data">
                                                <input id="datefrom"
                                                       @*asp-for=""*@
                                                       placeholder="@item.Phrase"
                                                       type="text"
                                                       class="input-data-field input-sm d-inline-flex"
                                                       value="@changePhrase"/>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="d-inline">
                                                <button class="table-cell-button"
                                                        type="submit"
                                                        asp-controller="ManageHomePage"
                                                        asp-action="ChangeRandomPhrase"
                                                        asp-route-id="@item.Id"
                                                        asp-route-changePhrase="@changePhrase">
                                                    Edit
                                                </button>
                                            </div>
                                            <div class="d-inline">
                                                <button class="table-cell-button"
                                                        asp-controller="ManageHomePage"
                                                        asp-action="DeleteRandomPhrase"
                                                        asp-route-id="@item.Id"
                                                        type="submit">
                                                    Delete
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section id="centralArea">
    <div class="row align-items-start">
        <div id="leftPhrase" class="col-md-7 col-lg-6 text-md-start text-left py-6">
            <div class="">
                <h3>Left side phrase</h3>
            </div>
            <div class="col">
                <form id="formOrder"
                      asp-route-id=""
                      asp-route-value=""
                      method="post">
                    <div class="row">
                        <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                        <div class="input-daterange input-group-data">
                            <textarea id="datefrom"
                                      @*asp-for=""*@
                                      type="text"
                                      class="input-data-field input-sm d-inline-flex">

                            </textarea>
                        </div>
                    </div>
                    <div class="row">
                        <div class="d-inline">
                            <button class="table-cell-button"
                                    type="submit"
                                    asp-controller="ManageHomePage"
                                    asp-action="LeftCentralAreaAddPhrase">
                                Change
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div id="rigthImage" class="col-md-5 col-lg-6 order-0 order-md-1 text-end">
            <div class="">
                <h3>Main image</h3>
            </div>
            <img class="pt-7 pt-md-0 w-50" src="~/Images/hand-draft.webp" width="170">
            <form id="formOrder"
                  asp-route-id=""
                  asp-route-value=""
                  method="post">
                <div class="row">
                    <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                    <div class="input-daterange input-group-data">
                        <textarea id="datefrom"
                                  @*asp-for=""*@
                                  type="text"
                                  class="input-data-field input-sm d-inline-flex">

                            </textarea>
                    </div>
                </div>
                <div class="row">
                    <div class="d-inline">
                        <button class="table-cell-button"
                                type="submit"
                                asp-controller="ManageHomePage"
                                asp-action="ChangeImageHomePage">
                            Change
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<section id="bottomArea">
    <div class="row text-left">
        <h3>Bottom header left text</h3>
    </div>
    <div class="row text-left">
        <form id="formOrder"
              asp-route-id=""
              asp-route-value=""
              method="post">
            <div class="row">
                <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                <div class="input-daterange input-group-data">
                    <input id="datefrom"
                              @*asp-for=""*@
                              type="text"
                              class="input-data-field input-sm d-inline-flex"/>

                </div>
            </div>
            <div class="row">
                <div class="d-inline">
                    <button class="table-cell-button"
                            type="submit"
                            asp-controller="ManageHomePage"
                            asp-action="ChangeBottomAreaHeader">
                        Change
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div class="row text-left">
        <h3>Bottom content text</h3>
    </div>
    <div class="row text-left">
        <form id="formOrder"
              asp-route-id=""
              asp-route-value=""
              method="post">
            <div class="row">
                <div class="col-sm-6 text-danger" asp-validation-summary="All"></div>
                <div class="input-daterange input-group-data">
                    <textarea id="datefrom"
                              @*asp-for=""*@
                              type="text"
                              class="input-data-field input-sm d-inline-flex">

                            </textarea>
                </div>
            </div>
            <div class="row">
                <div class="">
                    <button class="table-cell-button"
                            type="submit"
                            asp-controller="ManageHomePage"
                            asp-action="ChangeBottomAreaContent">
                        Change
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>
