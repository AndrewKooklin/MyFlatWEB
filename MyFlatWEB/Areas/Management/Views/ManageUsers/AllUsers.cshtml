@model List<IdentityUser>

@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row d-block pt-3">
        <h1>@ViewData["Title"]</h1>
    </div>
    
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <a asp-area="Management"
           asp-controller="ManageUsers"
           asp-action="AddUser"
           class="btn btn-primary"
           title="Add user">Add</a>
    </div>
    <div>
        <p>&nbsp;</p>
    </div>
    <table class="w-auto">
        <thead>
            <tr class="text-center users-table-header">
                @*<th>Id</th>*@
                <th class="users-column-name">UserName</th>
                <th class="users-column-email">Email</th>
                <th class="users-column-details"><i>Details</i></th>
                <th class="users-column-delete"><i>Delete</i></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        @*<td>@item.Id</td>*@
                        <td class="users-column-name">@item.UserName</td>
                        <td class="users-column-email">@item.Email</td>
                        <td class="users-column-details">
                            <a asp-area="Management"
                               asp-controller="ManageUsers"
                               asp-action="UserDetails"
                               asp-route-id="@item.Id"
                               title="Details"
                               class="linkDetails text-decoration-none">Details</a>
                        </td>
                        <td class="users-column-delete">
                            <a asp-area="Management"
                               asp-controller="ManageUsers"
                               asp-action="DeleteUser"
                               asp-route-id="@item.Id"
                               class="btn btn-primary"
                               title="Delete user">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
