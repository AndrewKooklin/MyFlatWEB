@model List<IdentityUser>

@{
    ViewData["Title"] = "Users";
}
<h1>@ViewData["Title"]</h1>

<div asp-validation-summary="All" class="text-danger"></div>
<div>
    <a asp-area="Management"
       asp-controller="ManageUsers"
       asp-action="AddNewUser"
       class="btn btn-primary"
       title="Add user">Add</a>
</div>
<div>
    <p>&nbsp;</p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>UserName</th>
            <th>Email</th>
            <th><i>Details</i></th>
            <th><i>Delete</i></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-area="Management"
                           asp-controller="ManageUsers"
                           asp-action="UserDetails"
                           asp-route-id="@item.Id"
                           title="Details"
                           class="linkDetails">Details</a>
                    </td>
                    <td>
                        <a asp-area="Management"
                           asp-controller="ManageUsers"
                           asp-action="DeleteUser"
                           asp-route-id="@item.Id"
                           class="btn btn-primary"
                           title="Delete user">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

