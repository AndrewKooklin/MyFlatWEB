@model PostModel

@{
    ViewData["Title"] = "Add Post";

    string HeaderLabelText = ViewBag.HeaderText;
    string DescriptionLabelText = ViewBag.DescriptionText;
    IFormFile formFile = null;
    string image = "";
}

<html>
<head>
    <script src="~/lib/jquery/admin/jquery-1.12.4.min.js"></script>
    <script src="~/js/change-label-image.js"></script>
</head>
<body>
</body>
</html>

<div class="ml-3">
    <div class="row">
        <div class="col">
            <section id="addPost">
                <div class="row text-left pt-3 ml-1">
                    <h3>Add new post</h3>
                </div>
                <div class="row mt-2 d-block">
                    <form id="addPostModel"
                          asp-controller="ManageBlogPage"
                          asp-action="AddPostToDB"
                          method="post"
                          enctype="multipart/form-data">
                        <div class="ml-3">
                            <div class="">
                                <label asp-for="@Model.PostHeader"
                                       class="label-project">Post Header</label>
                                <span asp-validation-for="@Model.PostHeader"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <input asp-for="@Model.PostHeader"
                                       type="text"
                                       placeholder="Add header"
                                       class="form-control mr-1 input-project-header" />
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.PostDescription"
                                       class="mt-1 label-project">Post Description</label>
                                <span asp-validation-for="@Model.PostDescription"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <textarea asp-for="@Model.PostDescription"
                                          cols="40"
                                          rows="5"
                                          placeholder="Add description"
                                          class="form-control input-project-desc"></textarea>
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.PostImage"
                                       class="mt-1 label-project">Post Image</label>
                                <span asp-validation-for="@Model.PostImage"
                                      class="text-danger"></span>
                            </div>
                            <div class="mt-1">
                                <label id="choose-file-label"
                                       for="Image"
                                       class="btn-choose-file"
                                       title="Choose image">
                                    Choose image
                                </label>
                                <input id="Image"
                                       type="file"
                                       accept=".jpg, .jpeg, .png, .webp"
                                       placeholder="Choose image"
                                       class="select-image"
                                       name="image"
                                       value="@formFile"
                                       alt="Choose image" />
                                <label id="choose-file-text"
                                       class="label-not-choose-image">
                                    Image not choosed !
                                </label>
                            </div>
                        </div>
                        <div class="mt-3 ml-3">
                            <button class="btn btn-primary btn-effect justify-content-end mr-1"
                                    type="submit"
                                    title="Add post">
                                Add
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
