@model PostModel

@{
    ViewData["Title"] = "Change Post";

    IFormFile formFile = ViewBag.FormFile;

    string fileName = ViewBag.FileName;
}

<html>
<head>
    <script src="~/lib/jquery/admin/jquery-1.12.4.min.js"></script>
    <script src="~/js/change-label-image.js"></script>
</head>
<body>
</body>
</html>

<div class="ml-3">
    <div class="row">
        <div class="col">
            <section id="changePostSection">
                <div class="row text-left pt-3 ml-1">
                    <h3>Change post</h3>
                </div>
                <div class="row mt-2 d-block">
                    <form id="changePost"
                          method="post"
                          enctype="multipart/form-data">
                        <div class="ml-3">
                            <div class="">
                                <label asp-for="@Model.PostHeader"
                                       class="label-project">Post Header</label>
                                <span asp-validation-for="@Model.PostHeader"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <input asp-for="@Model.PostHeader"
                                       type="text"
                                       placeholder="@Model.PostHeader"
                                       class="form-control mr-1 input-project-header" />
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.PostDescription"
                                       class="mt-1 label-project">Post Description</label>
                                <span asp-validation-for="@Model.PostDescription"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <textarea asp-for="@Model.PostDescription"
                                          cols="40"
                                          rows="5"
                                          placeholder="@Model.PostDescription"
                                          class="form-control input-project-desc"></textarea>
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.PostImage"
                                       class="mt-1 label-project">Post Image</label>
                                <span asp-validation-for="@Model.PostImage"
                                      class="text-danger"></span>
                            </div>
                            <div class="mt-1 img-project-change">
                                @if (Model.PostImage != null)
                                {
                                    <img class="img-project"
                                         src="data:image;base64,@(Convert.ToBase64String(Model.PostImage))">
                                }
                            </div>
                            <div class="mt-1">
                                <label id="choose-file-label"
                                       for="Image"
                                       class="btn-choose-file"
                                       title="Choose image">
                                    @*Choose image*@
                                    @fileName
                                </label>
                                <input id="Image"
                                       type="file"
                                       accept=".jpg, .jpeg, .png, .webp"
                                       placeholder="Choose image"
                                       class="select-image"
                                       name="image"
                                       value="@formFile"
                                       alt="Choose image" />
                                <label id="choose-file-text"
                                       class="label-not-choose-image">
                                    Image not choosed !
                                </label>
                            </div>
                        </div>
                        <div class="d-inline-block mt-3 ml-3">
                            <button asp-controller="ManageBlogPage"
                                    asp-action="Posts"
                                    class="btn btn-primary btn-effect justify-content-end mr-1"
                                    type="submit"
                                    title="Cancel change">
                                Cancel
                            </button>
                            <button asp-controller="ManageBlogPage"
                                    asp-action="ChangePost"
                                    asp-route-id="@Model.Id"
                                    class="btn btn-primary btn-effect justify-content-end mr-1"
                                    type="submit"
                                    title="Change post">
                                Change
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

