@model OrdersModel

<div class="container m-0">
    
    <div class="row">
        <h2 class="mt-3">@Model.Title</h2>
    </div>
    <div>
        @if (Model.OrderModels.Any())
        {
            <div class="row resp-table mt-3">
                <div class="resp-table-header">
                    <div class="table-header-cell text-center align-content-center">Id</div>
                    <div class="table-header-cell text-center align-content-center">Date Create</div>
                    <div class="table-header-cell text-center align-content-center">Name</div>
                    <div class="table-header-cell text-center align-content-center">Email</div>
                    <div class="table-header-cell text-center align-content-center">Mobile</div>
                    <div class="table-header-cell text-center align-content-center">Service</div>
                    <div class="table-header-cell text-center align-content-center">Message</div>
                    <div class="table-header-cell text-center align-content-center">Status</div>
                    <div class="table-header-cell text-center align-content-center">Statuses</div>
                    <div class="table-header-cell text-center align-content-center pl-1 pr-1"><i>Change status</i></div>
                </div>
                <div class="resp-table-body">

                    @foreach (var item in Model.OrderModels)
                    {
                        <form class="resp-table-row border-bottom"
                              asp-controller="ManageView"
                              asp-action="ChangeStatus"
                              asp-route-id="@item.Id"
                              asp-route-status="@Model.StatusName"
                              asp-route-service="@Model.Title"
                              method="post">
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.Id
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.DateCreate.ToString("dd.MM.yyyy hh:mm")
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.Name
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.Email
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.Mobile
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.ServiceName
                            </div>
                            <div class="table-body-cell text-left border-bottom">
                                @item.Message
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                @item.StatusName
                            </div>
                            @*<div class="collapse invisible">
                                <input asp-for="@item.ChangeStatusName" value="@item.ChangeStatusName"/>
                            </div>*@
                            <div class="table-body-cell select-status text-center align-content-center border-bottom">
                                <select id="Select1"
                                        name="status"
                                        asp-for="@Model.StatusName"
                                        asp-items="@Model.StatusNames"
                                        class="select-status-control">
                                </select>
                            </div>
                            <div class="table-body-cell text-center align-content-center border-bottom">
                                <button class="btn btn-primary btn-change-status"
                                        title="Change status"
                                        type="submit"
                                        onclick="Change_status">
                                    Change
                                </button>
                            </div>
                        </form>
                    }
                </div>
            </div>
        }
        </div>
</div>
