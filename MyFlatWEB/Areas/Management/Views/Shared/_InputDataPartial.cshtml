<div class="container d-sm-inline-flex">
    <div class="input-daterange input-group-data align-content-center">
        <span class="input-group-addon">Date from</span>
    </div>
    <div id="datefrom" class="input-daterange input-group-data">
        <input type="text" class="input-data input-sm d-inline-flex" name="start"  @*data-date-format="dd.MM.yyyy"*@ />
    </div>
    <div class="input-daterange input-group-data align-content-center">
        <span class="input-group-addon">to</span>
    </div>
    <div id="dateto" class="input-daterange input-group-data">
        <input type="text" class="input-data input-sm d-inline-flex" name="end"   @*data-date-format="dd.MM.yyyy"*@ />
    </div>
</div>
<script type="text/javascript">
    $(function () {
        
        $('#datefrom').datepicker({
            format: "dd.mm.yyyy",
            weekStart: 1,
            clearBtn: true,
            language: "ru",
            autoclose: true,
            forceParse: false,
            calendarWeeks: true,
        });
    });
    $('#datefrom').datepicker('show');
    $(function () {
        $('#dateto').datepicker({
            format: 'dd.mm.yyyy',
            weekStart: 1,
            clearBtn: true,
            //language: 'en-US',
            autoclose: true,
            forceParse: false,
            calendarWeeks: true,
        });
    });
    $('#dateto').datepicker('show');

    function change(input) {

        input = document.getElementById("datafrom").value;
        var inputValue = input.split('/', 2);
        var m = inputValue[0];
        var d = inputValue[1];
        var y = inputValue[2];
        var result = d + "." + m + "." + y;
        document.getElementById("datafrom").innerText = result;
    } 
    
</script>