@model ProjectModel

@{
    ViewData["Title"] = "Change Project";

    IFormFile formFile = null;
}

<html>
<head>
    <script src="~/lib/jquery/admin/jquery-1.12.4.min.js"></script>
    <script src="~/js/change-label-image.js"></script>
</head>
<body>
</body>
</html>

<div class="ml-3">
    <div class="row">
        <div class="col">
            <section id="addProject">
                <div class="row text-left pt-3 ml-1">
                    <h3>Change project</h3>
                </div>
                <div class="row mt-2 d-block">
                    <form id="changeProject"
                          asp-controller="ManageProjectsPage"
                          asp-action="ChangeProject"
                          asp-route-id="@Model.Id"
                          method="post"
                          enctype="multipart/form-data">
                        <div class="ml-3">
                            <div class="">
                                <label asp-for="@Model.ProjectHeader"
                                       class="label-project">Project Header</label>
                                <span asp-validation-for="@Model.ProjectHeader"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <input asp-for="@Model.ProjectHeader"
                                       type="text"
                                       placeholder="@Model.ProjectHeader"
                                       class="form-control mr-1 input-project-header"/>
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.ProjectDescription"
                                       class="mt-1 label-project">Project Description</label>
                                <span asp-validation-for="@Model.ProjectDescription"
                                      class="text-danger"></span>
                            </div>
                            <div class="">
                                <textarea asp-for="@Model.ProjectDescription"
                                          cols="40"
                                          rows="5"
                                          placeholder="@Model.ProjectDescription"
                                          class="form-control input-project-desc"></textarea>
                            </div>
                        </div>
                        <div class="mt-1 ml-3 d-block">
                            <div class="">
                                <label asp-for="@Model.ProjectImage"
                                       class="mt-1 label-project">Project Image</label>
                                <span asp-validation-for="@Model.ProjectImage"
                                      class="text-danger"></span>
                            </div>
                            <div class="mt-1 img-project-change">
                                @if (Model.ProjectImage != null)
                                {
                                    <img class="img-project"
                                         src="data:image;base64,@(Convert.ToBase64String(Model.ProjectImage))">
                                }
                            </div>
                            <div class="mt-1">
                                <label id="choose-file-label"
                                       for="Image"
                                       class="btn-choose-file"
                                       title="Choose image">
                                    Choose image
                                </label>
                                <input id="Image"
                                       type="file"
                                       accept=".jpg, .jpeg, .png, .webp"
                                       placeholder="Choose image"
                                       class="select-image"
                                       name="image"
                                       value="@formFile"
                                       alt="Choose image" />
                                <label id="choose-file-text"
                                       class="label-not-choose-image">
                                    Image not choosed !
                                </label>
                            </div>
                        </div>
                        <div class="mt-3 ml-3">
                            <button class="btn btn-primary justify-content-end mr-1"
                                    type="submit"
                                    title="Change project">
                                Change
                            </button>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>
